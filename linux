status_check

>>common.sh 
status_check() {
    if [$? -eq 0 ]  
then 
  echo Success
else
  echo Failure   
  exit # if failure then exit that step 
fi   
}

print_head() {
    echo -e "\e[35m $1 \e[0m"
} 
:wq
>>vi anji.sh 
source common.sh  ##this will call the common.sh file and status_check function  
